@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="auth-bg d-flex align-items-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">

                <div class="text-center mb-4">
                    <h1 class="h3 fw-bold mb-1">@ViewData["Title"]</h1>
                    <div class="text-muted">Hesabınla giriş yap</div>
                </div>

                <div class="auth-card">

                    <div class="card-body p-4 p-md-5">

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 d-none" role="alert"></div>

                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <input asp-for="Input.Email"
                                       class="form-control form-control-lg"
                                       autocomplete="username"
                                       aria-required="true"
                                       placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label">Şifre</label>
                                <input asp-for="Input.Password"
                                       class="form-control form-control-lg"
                                       autocomplete="current-password"
                                       aria-required="true"
                                       placeholder="••••••••" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">
                                        Beni hatırla
                                    </label>
                                </div>

                                <a id="forgot-password" asp-page="./ForgotPassword"
                                   class="link-secondary text-decoration-none">
                                    Şifremi unuttum
                                </a>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 rounded-3">
                                Giriş Yap
                            </button>

                            <div class="text-center mt-4">
                                <div class="text-muted mb-2">Hesabın yok mu?</div>
                                <a asp-page="./Register"
                                   asp-route-returnUrl="@Model.ReturnUrl"
                                   class="btn btn-outline-secondary w-100 rounded-3">
                                    Kayıt Ol
                                </a>
                            </div>

                            <div class="text-center mt-3">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                                   class="small link-secondary text-decoration-none">
                                    Doğrulama e-postasını tekrar gönder
                                </a>
                            </div>
                        </form>

                    </div>
                </>

                <div class="text-center mt-3 small text-muted">
                    © @DateTime.Now.Year Spor Salonu
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const summary = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (!summary) return;
            const observer = new MutationObserver(() => {
                const hasError = summary.innerText.trim().length > 0;
                summary.classList.toggle('d-none', !hasError);
            });
            observer.observe(summary, { childList: true, subtree: true, characterData: true });
        })();
    </script>
}
