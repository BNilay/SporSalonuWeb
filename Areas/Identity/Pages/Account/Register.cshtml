@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="auth-bg d-flex align-items-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-6">

                <div class="text-center mb-4">
                    <h1 class="h3 fw-bold mb-1">@ViewData["Title"]</h1>
                    <div class="text-muted">Yeni bir hesap oluştur</div>
                </div>

                <div class="auth-card">
                    <div class="card-body p-4 p-md-5">

                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 d-none" role="alert"></div>

                            <div class="row g-3">
                                <div class="col-12 col-md-6">
                                    <label asp-for="Input.Ad" class="form-label">Ad</label>
                                    <input asp-for="Input.Ad" class="form-control form-control-lg" aria-required="true" />
                                    <span asp-validation-for="Input.Ad" class="text-danger"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="Input.Soyad" class="form-label">Soyad</label>
                                    <input asp-for="Input.Soyad" class="form-control form-control-lg" aria-required="true" />
                                    <span asp-validation-for="Input.Soyad" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="Input.Password" class="form-label">Şifre</label>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="Input.ConfirmPassword" class="form-label">Şifre (Tekrar)</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100 rounded-3 mt-4">
                                Kayıt Ol
                            </button>

                            <div class="text-center mt-4">
                                <div class="text-muted mb-2">Zaten hesabın var mı?</div>
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                                   class="btn btn-outline-secondary w-100 rounded-3">
                                    Giriş Yap
                                </a>
                            </div>
                        </form>

                    </div>
                </div>

                <div class="text-center mt-3 small text-muted">
                    © @DateTime.Now.Year Spor Salonu
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Validation summary boşsa gizli kalsın, doluysa göster.
        (function () {
            const summary = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (!summary) return;
            const observer = new MutationObserver(() => {
                const hasError = summary.innerText.trim().length > 0;
                summary.classList.toggle('d-none', !hasError);
            });
            observer.observe(summary, { childList: true, subtree: true, characterData: true });
        })();
    </script>
}
