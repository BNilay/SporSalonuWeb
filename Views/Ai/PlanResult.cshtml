@using System.Text.Json
@{
    ViewData["Title"] = "AI Plan Sonucu";
    var raw = ViewBag.ResultJson as string;
    var err = ViewBag.Error as string;
}

<div class="container my-4">

    <div class="d-flex align-items-center gap-2 mb-3">
        <h2 class="m-0">🤖 AI Plan Sonucu</h2>
    </div>

    @if (!string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">
            <b>Hata:</b> @err
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">

            <details class="mb-3">
                
                <pre class="mt-2 p-3 bg-light border rounded" style="white-space:pre-wrap; word-break:break-word;">
                    @(string.IsNullOrWhiteSpace(raw) ? "BOŞ GELDİ (ViewBag.ResultJson null/empty)" : raw)
                </pre>
            </details>

            <div id="parsedArea"></div>

        </div>
    </div>

</div>

<script>
    // Razor'dan güvenli şekilde JS string'e taşıyoruz
    const raw = @Html.Raw(JsonSerializer.Serialize(raw ?? ""));

    const parsedArea = document.getElementById("parsedArea");

    function stripCodeFences(s) {
        if (!s) return s;
        s = s.trim();
        if (s.startsWith("```")) {
            // ```json ... ``` veya ``` ... ```
            s = s.replace(/^```[a-zA-Z]*\s*/, "").replace(/```$/, "").trim();
        }
        return s;
    }

    const cleaned = stripCodeFences(raw);

    if (!cleaned) {
        parsedArea.innerHTML = `<div class="alert alert-warning">AI çıktısı boş geldi. Controller ViewBag.ResultJson set etmiyor olabilir.</div>`;
    } else {
        try {
            const data = JSON.parse(cleaned);

            // Özet
            let html = "";
            if (data.summary) {
                html += `<div class="mb-3"><h5>Özet</h5><p class="mb-0">${data.summary}</p></div>`;
            }

            // Training tablo
            if (Array.isArray(data.training) && data.training.length > 0) {
                html += `<h5 class="mt-3">Antrenman</h5>`;
                data.training.forEach(dayObj => {
                    html += `
                            <div class="mt-3">
                                <div class="fw-bold">${dayObj.day ?? ""} <span class="text-muted">- ${dayObj.focus ?? ""}</span></div>
                                <div class="table-responsive mt-2">
                                    <table class="table table-sm table-striped align-middle">
                                        <thead>
                                            <tr>
                                                <th>Hareket</th>
                                                <th>Set</th>
                                                <th>Tekrar</th>
                                                <th>Dinlenme</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                        `;
                    (dayObj.exercises || []).forEach(ex => {
                        html += `
                                <tr>
                                    <td>${ex.name ?? ""}</td>
                                    <td>${ex.sets ?? ""}</td>
                                    <td>${ex.reps ?? ""}</td>
                                    <td>${ex.rest ?? ""}</td>
                                </tr>
                            `;
                    });
                    html += `
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        `;
                });
            }

            // Beslenme
            if (data.nutrition) {
                html += `<h5 class="mt-4">Beslenme</h5>`;
                html += `<div class="row g-3">`;
                html += `<div class="col-md-4"><div class="border rounded p-3"><div class="text-muted">Kalori</div><div class="fs-5 fw-bold">${data.nutrition.calories ?? "-"}</div></div></div>`;
                const m = data.nutrition.macros || {};
                html += `<div class="col-md-8"><div class="border rounded p-3">
                                <div class="text-muted mb-2">Makrolar (g)</div>
                                <div class="d-flex flex-wrap gap-3">
                                    <div><b>Protein:</b> ${m.protein_g ?? "-"}</div>
                                    <div><b>Karbonhidrat:</b> ${m.carb_g ?? "-"}</div>
                                    <div><b>Yağ:</b> ${m.fat_g ?? "-"}</div>
                                </div>
                             </div></div>`;
                html += `</div>`;

                if (Array.isArray(data.nutrition.sample_day) && data.nutrition.sample_day.length) {
                    html += `<div class="mt-3"><div class="fw-bold">Örnek Gün</div><ul class="mb-0">` +
                        data.nutrition.sample_day.map(x => `<li>${x}</li>`).join("") +
                        `</ul></div>`;
                }
            }

            // Uyarılar
            if (Array.isArray(data.warnings) && data.warnings.length) {
                html += `<h5 class="mt-4">Uyarılar</h5><ul class="mb-0">` +
                    data.warnings.map(x => `<li>${x}</li>`).join("") +
                    `</ul>`;
            }

            parsedArea.innerHTML = html || `<div class="alert alert-info">JSON parse edildi ama ekranda gösterecek alan bulunamadı.</div>`;
        } catch (e) {
            parsedArea.innerHTML = `
                    <div class="alert alert-danger">
                        JSON parse edilemedi. (Muhtemelen AI çıktı başına/sonuna ekstra metin koydu.)
                        <div class="small mt-2"><b>Hata:</b> ${e}</div>
                    </div>
                `;
        }
    }
</script>
