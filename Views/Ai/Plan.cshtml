@model yeniWeb.Models.ViewModels.PlanRequestVm

@{
    ViewData["Title"] = "AI Plan Oluştur";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow">
                <div class="card-body p-4">

                    <h3 class="card-title text-center mb-4">
                        🤖 AI Plan Oluştur (Gemini)
                    </h3>

                    <form asp-action="Plan" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Fotoğraf (opsiyonel)</label>
                            <input asp-for="Photo" type="file" class="form-control" accept="image/*" id="photoInput" />
                            <span asp-validation-for="Photo" class="text-danger small"></span>
                            <div class="form-text">Ön/yan açıdan, aydınlık bir ortamda çekilmiş fotoğraf daha iyi sonuç verir.</div>
                        </div>

                        <div class="mb-4">
                            <img id="photoPreview" class="img-fluid rounded shadow-sm" style="display:none; max-height: 320px; object-fit: cover; width: 100%;" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yaş</label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cinsiyet</label>
                            <select asp-for="Sex" class="form-select">
                                <option value="">Seçiniz</option>
                                <option>Kadın</option>
                                <option>Erkek</option>
                            </select>
                            <span asp-validation-for="Sex" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Boy (cm)</label>
                                <input asp-for="HeightCm" class="form-control" />
                                <span asp-validation-for="HeightCm" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Kilo (kg)</label>
                                <input asp-for="WeightKg" class="form-control" />
                                <span asp-validation-for="WeightKg" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hedef</label>
                            <select asp-for="Goal" class="form-select">
                                <option value="">Seçiniz</option>
                                <option>Kilo verme</option>
                                <option>Kas kazanımı</option>
                                <option>Genel form</option>
                            </select>
                            <span asp-validation-for="Goal" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Haftada Kaç Gün</label>
                            <input asp-for="DaysPerWeek" class="form-control" />
                            <span asp-validation-for="DaysPerWeek" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ekipman</label>
                            <input asp-for="Equipment" class="form-control"
                                   placeholder="Örn: Evde ekipman yok, dambıl var" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Notlar</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"
                                      placeholder="Varsa özel notlarınız"></textarea>
                        </div>

                        <button id="btnSubmit" type="submit" class="btn btn-primary w-100 btn-lg">
                            Planı Oluştur
                        </button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const form = document.querySelector("form");
        const btn = document.getElementById("btnSubmit");
        const input = document.getElementById("photoInput");
        const img = document.getElementById("photoPreview");

        input.addEventListener("change", function () {
            const file = this.files && this.files[0];
            if (!file) {
                img.style.display = "none";
                img.src = "";
                return;
            }
            img.src = URL.createObjectURL(file);
            img.style.display = "block";
        });

        form.addEventListener("submit", function () {
            btn.disabled = true;
            btn.innerText = "Oluşturuluyor...";
        });
    </script>
}
