@model yeniWeb.Models.Antrenor

@{
    ViewData["Title"] = "Antrenör Sil";
}

<div class="page-bg">
    <div class="container">
        <div class="content-card">

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
                <div>
                    <h2 class="mb-1">Antrenör Sil</h2>
                    <div class="text-muted">Bu kaydı silmeden önce bilgileri kontrol edin.</div>
                </div>

                <a asp-action="Index" class="btn btn-secondary">
                    Geri
                </a>
            </div>

            <div class="alert alert-warning mb-3">
                Bu antrenörü silmek istediğinize emin misiniz?
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 180px;">Ad Soyad</th>
                            <td class="fw-semibold">@Model.AdSoyad</td>
                        </tr>
                        <tr>
                            <th>Uzmanlık</th>
                            <td>@Model.UzmanlikAlanlari</td>
                        </tr>
                        <tr>
                            <th>Salon</th>
                            <td>@(Model.Salon?.SalonAdi ?? "-")</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete" method="post" class="d-flex gap-2 justify-content-end mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    Evet, Sil
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Vazgeç
                </a>
            </form>

        </div>
    </div>
</div>
