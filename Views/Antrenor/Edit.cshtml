@model yeniWeb.Models.ViewModels.AntrenorFormVM
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<h2>Antrenör Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AdSoyad"></label>
        <input asp-for="AdSoyad" class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UzmanlikAlanlari"></label>
        <input asp-for="UzmanlikAlanlari" class="form-control" />
        <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Salon</label>
        @Html.DropDownListFor(m => m.SalonId,
                 (SelectList)ViewBag.SalonId,
                 "Salon seçiniz",
                 new { @class = "form-control" })
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
