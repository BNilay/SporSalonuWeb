@model yeniWeb.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<h2>Hizmet Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="HizmetId" />

    <div class="form-group">
        <label asp-for="HizmetAdi"></label>
        <input asp-for="HizmetAdi" class="form-control" />
        <span asp-validation-for="HizmetAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fiyat"></label>
        <input asp-for="Fiyat" class="form-control" />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HizmetSuresi"></label>
        <input asp-for="HizmetSuresi" class="form-control" />
        <span asp-validation-for="HizmetSuresi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Salon</label>
        @Html.DropDownListFor(m => m.SalonId,
                 (SelectList)ViewBag.SalonId,
                 "Salon seçiniz",
                 new { @class = "form-control" })
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
