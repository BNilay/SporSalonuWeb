@model IEnumerable<yeniWeb.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2>Hizmetler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Hizmet Adı</th>
            <th>Fiyat</th>
            <th>Süre (saat)</th>
            <th>Salon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.HizmetAdi</td>
                <td>@h.Fiyat</td>
                <td>@h.HizmetSuresi</td>
                <td>@h.Salon?.SalonAdi</td>
                <td>
                    <a asp-action="Details" asp-route-id="@h.HizmetId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@h.HizmetId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@h.HizmetId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
