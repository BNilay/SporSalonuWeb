@model yeniWeb.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="page-bg">
    <div class="container">
        <div class="content-card">

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
                <div>
                    <h2 class="mb-1">Hizmet Sil</h2>
                    <div class="text-muted">Silmeden önce bilgileri kontrol edin.</div>
                </div>

                <a asp-action="Index" class="btn btn-secondary">
                    Geri
                </a>
            </div>

            <div class="alert alert-warning mb-3">
                <b>@Model.HizmetAdi</b> hizmetini silmek istediğinize emin misiniz?
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 180px;">Salon</th>
                            <td>@(Model.Salon?.SalonAdi ?? "-")</td>
                        </tr>
                        <tr>
                            <th>Fiyat</th>
                            <td>@Model.Fiyat</td>
                        </tr>
                        <tr>
                            <th>Süre (dk)</th>
                            <td>@Model.HizmetSuresi</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete" method="post" class="d-flex gap-2 justify-content-end mt-4">
                <input type="hidden" asp-for="HizmetId" />
                <button type="submit" class="btn btn-danger">
                    Evet, Sil
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Vazgeç
                </a>
            </form>

        </div>
    </div>
</div>
