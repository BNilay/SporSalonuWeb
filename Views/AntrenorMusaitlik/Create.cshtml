@model yeniWeb.Models.ViewModels.AntrenorMusaitlikVM
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Yeni Müsaitlik";
}

<div class="page-bg">
    <div class="container">
        <div class="content-card">

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
                <div>
                    <h2 class="mb-1">Yeni Müsaitlik</h2>
                    <div class="text-muted">Antrenör için gün ve saat aralığı tanımlayın.</div>
                </div>

                <a class="btn btn-secondary"
                   asp-action="Index"
                   asp-route-antrenorId="@Model.AntrenorId">
                    Geri
                </a>
            </div>

            <form asp-action="Create" method="post" class="row g-3">
                <input type="hidden" asp-for="AntrenorId" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="col-12">
                    <label asp-for="Gun" class="form-label"></label>
                    <select asp-for="Gun"
                            asp-items="(IEnumerable<SelectListItem>)ViewBag.Gunler"
                            class="form-select">
                        <option value="">Gün seçiniz</option>
                    </select>
                    <span asp-validation-for="Gun" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="BaslangicSaati" class="form-label"></label>
                    <input asp-for="BaslangicSaati" type="time" class="form-control" />
                    <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="BitisSaati" class="form-label"></label>
                    <input asp-for="BitisSaati" type="time" class="form-control" />
                    <span asp-validation-for="BitisSaati" class="text-danger"></span>
                </div>

                <div class="col-12 d-flex gap-2 justify-content-end mt-2">
                    <button class="btn btn-primary" type="submit">
                        Kaydet
                    </button>

                    <a class="btn btn-outline-secondary"
                       asp-action="Index"
                       asp-route-antrenorId="@Model.AntrenorId">
                        İptal
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
