@model IEnumerable<yeniWeb.Models.AntrenorMusaitlik>

@{
    ViewData["Title"] = "Müsaitlikler";
    var a = ViewBag.Antrenor as yeniWeb.Models.Antrenor;

    string GunTr(DayOfWeek d) => d switch
    {
        DayOfWeek.Monday => "Pazartesi",
        DayOfWeek.Tuesday => "Salı",
        DayOfWeek.Wednesday => "Çarşamba",
        DayOfWeek.Thursday => "Perşembe",
        DayOfWeek.Friday => "Cuma",
        DayOfWeek.Saturday => "Cumartesi",
        _ => "Pazar"
    };
}

<div class="page-bg">
    <div class="container">
        <div class="content-card">

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
                <div>
                    <h2 class="mb-1">Müsaitlikler</h2>

                    @if (a != null)
                    {
                        <div class="text-muted">
                            <span class="fw-semibold">@a.AdSoyad</span>
                            @if (a.Salon != null)
                            {
                                <span> • @a.Salon.SalonAdi</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">Antrenör müsaitliklerini görüntüleyin ve yönetin.</div>
                    }
                </div>

                <div class="d-flex flex-wrap gap-2">
                    @if (a != null)
                    {
                        <a class="btn btn-primary"
                           asp-action="Create"
                           asp-route-antrenorId="@a.Id">
                            Yeni Müsaitlik
                        </a>
                    }

                    <a class="btn btn-secondary"
                       asp-controller="Antrenor"
                       asp-action="Index">
                        Antrenörlere Geri
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Gün</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th class="text-end" style="width: 220px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    Henüz müsaitlik eklenmemiş.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@GunTr(m.Gun)</td>
                                    <td>@m.BaslangicSaati.ToString(@"hh\:mm")</td>
                                    <td>@m.BitisSaati.ToString(@"hh\:mm")</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group" aria-label="İşlemler">
                                            <a class="btn btn-warning btn-sm"
                                               asp-action="Edit"
                                               asp-route-id="@m.Id">
                                                Düzenle
                                            </a>

                                            <a class="btn btn-danger btn-sm"
                                               asp-action="Delete"
                                               asp-route-id="@m.Id">
                                                Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
