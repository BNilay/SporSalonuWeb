@model yeniWeb.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<div class="page-bg">
    <div class="container">
        <div class="content-card">

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
                <div>
                    <h2 class="mb-1">Randevu Sil</h2>
                    <div class="text-muted">Silmeden önce bilgileri kontrol edin.</div>
                </div>

                <a asp-action="Index" class="btn btn-secondary">
                    Geri
                </a>
            </div>

            <div class="alert alert-warning mb-3">
                Bu randevuyu silmek istediğinize emin misiniz?
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 180px;">Üye</th>
                            <td>@(Model.Uye?.AdSoyad ?? "-")</td>
                        </tr>
                        <tr>
                            <th>Antrenör</th>
                            <td>@(Model.Antrenor?.AdSoyad ?? "-")</td>
                        </tr>
                        <tr>
                            <th>Hizmet</th>
                            <td>@(Model.Hizmet?.HizmetAdi ?? "-")</td>
                        </tr>
                        <tr>
                            <th>Tarih</th>
                            <td>@Model.RandevuTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Süre</th>
                            <td>@Model.SureDakika dk</td>
                        </tr>
                        <tr>
                            <th>Durum</th>
                            <td>@Model.Durum</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete" method="post" class="d-flex gap-2 justify-content-end mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger">
                    Evet, Sil
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    Vazgeç
                </a>
            </form>

        </div>
    </div>
</div>
