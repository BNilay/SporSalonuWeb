@model yeniWeb.Models.Salon

@{
    ViewData["Title"] = "Salon Detay";
}

<div class="page-bg">
    <div class="container">
        <div class="content-card">

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
                <div>
                    <h2 class="mb-1">Salon Detayı</h2>
                    <div class="text-muted">Salon bilgilerini görüntüleyin.</div>
                </div>

                <a asp-action="Index" class="btn btn-secondary">
                    Geri
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <tbody>
                        <tr>
                            <th style="width:180px;">ID</th>
                            <td>@Model.SalonId</td>
                        </tr>
                        <tr>
                            <th>Salon Adı</th>
                            <td class="fw-semibold">@Model.SalonAdi</td>
                        </tr>
                        <tr>
                            <th>Çalışma Saatleri</th>
                            <td>@Model.CalismaSaatleri</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex gap-2 justify-content-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.SalonId" class="btn btn-warning">
                    Düzenle
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Kapat
                </a>
            </div>

        </div>
    </div>
</div>
