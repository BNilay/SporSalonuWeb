@model IEnumerable<yeniWeb.Models.Salon>

@{
    ViewData["Title"] = "Salonlar";
}

<div class="page-bg">
    <div class="container">
        <div class="content-card">

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
                <div>
                    <h2 class="mb-1">Salonlar</h2>
                    <div class="text-muted">Kayıtlı salonları görüntüleyin ve yönetin.</div>
                </div>

                <a asp-action="Create" class="btn btn-primary">
                    Yeni Salon Ekle
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Salon Adı</th>
                            <th>Çalışma Saatleri</th>
                            <th class="text-end" style="width: 260px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@s.SalonAdi</td>
                                <td>@s.CalismaSaatleri</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group" aria-label="İşlemler">
                                        <a asp-action="Details"
                                           asp-route-id="@s.SalonId"
                                           class="btn btn-info btn-sm">
                                            Detay
                                        </a>
                                        <a asp-action="Edit"
                                           asp-route-id="@s.SalonId"
                                           class="btn btn-warning btn-sm">
                                            Düzenle
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@s.SalonId"
                                           class="btn btn-danger btn-sm">
                                            Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    Henüz salon kaydı yok.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
