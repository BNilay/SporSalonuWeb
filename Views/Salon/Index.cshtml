@model IEnumerable<yeniWeb.Models.Salon>

<h2>Salonlar</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Salon Ekle</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Salon Adı</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.SalonAdi</td>
                <td>@s.CalismaSaatleri</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.SalonId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@s.SalonId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@s.SalonId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
