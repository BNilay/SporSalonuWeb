@model yeniWeb.Models.Salon

<h2>Salon Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SalonId" />

    <div class="form-group">
        <label asp-for="SalonAdi"></label>
        <input asp-for="SalonAdi" class="form-control" />
        <span asp-validation-for="SalonAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CalismaSaatleri"></label>
        <input asp-for="CalismaSaatleri" class="form-control" />
        <span asp-validation-for="CalismaSaatleri" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
</form>
